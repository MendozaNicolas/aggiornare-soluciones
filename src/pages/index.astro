---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Aggionare Digital">
	<header class="m-10">
		<div class="navbar rounded-md px-5">
			<div class="navbar-start">
				<div class="dropdown">
					<div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="h-5 w-5"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
							><path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M4 6h16M4 12h8m-8 6h16"></path></svg
						>
					</div>
					<ul
						tabindex="0"
						class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52"
					>
						<li><a>Item 1</a></li>
						<li><a>Item 2</a></li>
						<li><a>Item 3</a></li>
					</ul>
				</div>
				<a class="btn btn-ghost text-xl">Aggiornare Digital</a>
			</div>
			<div class="navbar-center hidden lg:flex">
				<ul class="menu menu-horizontal px-1">
					<li><a>Home</a></li>
					<li><a>Servicios</a></li>
					<li><a>Sobre nosotros</a></li>
				</ul>
			</div>
			<div class="navbar-end">
				<a class="btn">Contactanos</a>
			</div>
		</div>
	</header>
	<main class="w-full">
		<section class="flex flex-col justify-center mx-20 my-5 p-20 h-screen">
			<h1>
				<span class="text-5xl">
					Conseguí la pagina que querés rapido, 
					seguro, y barato!
				</span>
			</h1>
			<svg class="bannerEl" width="80" height="22" viewBox="0 0 80 22" fill="none" style="--order: 2;"><line x1="1" y1="1" x2="79" y2="1" stroke="#484A51" stroke-width="2" stroke-linecap="round"></line><line x1="17" y1="11" x2="63" y2="11" stroke="#484A51" stroke-width="2" stroke-linecap="round"></line><line x1="29" y1="21" x2="51" y2="21" stroke="#484A51" stroke-width="2" stroke-linecap="round"></line></svg>
			<span>
				We help businesses create fast, performance-focused, scalable & secure website using the latest and revolutionary technologies.
			</span>
		</section>
	</main>
</Layout>
